
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="Titulo_inicial">Tipo Clientes</h2>
<br />
<div class="row">
    <div class="col-lg-9">
        <h2> Inicio </h2>
    </div>

    <div class="col-lg-2">
        <p><a class="btn btn-primary btn-lg" href="/TipoClientes/Crear" role="button"> Crear Nuevo TipoCliente</a></p>
    </div>
</div>


<div class="panel panel-default">
    <div class="panel-heading">
        Lista de TipoClientes
    </div>

    <!--- La Tabla -->
    <table class="table"
           <thead>
               <tr>
                   <th>IdTipoCliente</th>
                   <th>Descripcion</th>
                   <th>
                   <th>
               </tr>
           </thead>

    @foreach (var cat in Model)
    {

    <tr>

        <td> @cat.IdTipoCliente </td>
        <td> @cat.Descripcion </td>
       
       

        <td> <a class="btn btn-primary btn-lg " href="/TipoClientes/Editar/@cat.IdTipoCliente" role="button">Editar</a> </td>


        <td> <a class="btn btn-primary btn-lg " href="/TipoClientes/Detalles/@cat.IdTipoCliente" target="_blank" role="button">Detalles</a> </td>

        <td> <a class="btn btn-primary btn-lg " href="/TipoClientes/Eliminar/@cat.IdTipoCliente" role="button">Eliminar</a> </td>

    </tr>
    }
    </table>
</div>

