
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>
<div>

    <form action="/TipoClientes/Modificar" method="post">

        <div class="form-group">
            <label for="id"> IdTipoCliente: </label>
            <label for="id" name="IdTipoCliente">@Model.IdTipoCliente </label>
            <input type="hidden" name="IdTipoCliente" value="@Model.IdTipoCliente" />
        </div>

        <div class="form-group">
            <label for="Descripcion"> Descripcion: </label>
            <input type="text" class="form-control" name="Descripcion" id="Descripcion" value="@Model.Descripcion" />
        </div>


        <div class="form-group">
            <p> <button class="btn btn-primary btn-lg" type="submit" role="button"> Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/TipoClientes/Index" role="button">Cancelar</a>
        </div>

    </form>

</div>

