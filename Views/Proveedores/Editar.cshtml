
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>

    <form action="/Proveedores/Modificar" method="post">

        <div class="form-group">
            <label for="id"> IdProveedor: </label>
            <label for="id" name="IdProveedor">@Model.IdProveedor </label>
            <input type="hidden" name="IdProveedor" value="@Model.IdProveedor" />
        </div>

        <div class="form-group">
            <label for="nombre"> Nombre: </label>
            <input type="text" class="form-control" name="Nombre" id="Nombre" value="@Model.Nombre" />
        </div>

        <div class="form-group">
            <label for="telefono"> Telefono: </label>
            <input type="text" class="form-control" name="Telefono" id="Telefono" value="@Model.Telefono" />
        </div>


        <div class="form-group">
            <label for="codigociiu"> CodigoCiiu: </label>
            <input type="text" class="form-control" name="CodigoCiiu" id="CodigoCiiu" value="@Model.CodigoCiiu" />
        </div>


        <div class="form-group">
            <label for="direccion"> Direccion: </label>
            <input type="text" class="form-control" name="Direccion" id="Direccion" value="@Model.Direccion" />
        </div>


        <div class="form-group">
            <p> <button class="btn btn-primary btn-lg" type="submit" role="button"> Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/Proveedores/Index" role="button">Cancelar </a>
        </div>

    </form>

</div>
