
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Editar</h2>

<div>

    <form action="/CategoriasProductos/Modificar" method="post">

        <div class="form-group">
            <label for="id"> IdCategoria: </label>
