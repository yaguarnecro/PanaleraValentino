
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <form action="/Productos/Modificar" method="post">

        <div class="form-group">
            <label for="id"> IdProducto: </label>
            <label for="id" name="IdProducto">@Model.IdProducto </label>
            <input type="hidden" name="IdProducto" value="@Model.IdProducto" />
        </div>

        <div class="form-group">
            <label for="Nombre"> Nombre: </label>
            <input type="text" class="form-control" name="Nombre" id="Nombre" value="@Model.Nombre" />
        </div>

        <div class="form-group">
            <label for="Costo"> Costo: </label>
            <input type="text" class="form-control" name="Costo" id="Costo" value="@Model.Costo" />
        </div>

        <div class="form-group">
            <label for="Existencia"> Existencia: </label>
            <input type="text" class="form-control" name="Existencia" id="Existencia" value="@Model.Existencia" />
        </div>

        <div class="form-group">
            <label for="Estado"> Estado: </label>
            <input type="text" class="form-control" name="Estado" id="Estado" value="@Model.Estado" />
        </div>

        <div class="form-group">
            <label for="Tipo"> Tipo: </label>
            <input type="text" class="form-control" name="Tipo" id="Tipo" value="@Model.Tipo" />
        </div>

        <div class="form-group">
            <label for="Tamaño"> Tamaño: </label>
            <input type="text" class="form-control" name="Tamaño" id="Tamaño" value="@Model.Tamaño" />
        </div>

        <div class="form-group">
            <label for="Empaque"> Empaque: </label>
            <input type="text" class="form-control" name="Empaque" id="Empaque" value="@Model.Empaque" />
        </div>

        <div class="form-group">
            <label for="PuntoMaximo"> PuntoMaximo: </label>
            <input type="text" class="form-control" name="PuntoMaximo" id="PuntoMaximo" value="@Model.PuntoMaximo" />
        </div>

        <div class="form-group">
            <label for="PuntoReorden"> PuntoReorden: </label>
            <input type="text" class="form-control" name="PuntoReorden" id="PuntoReorden" value="@Model.PuntoReorden" />
        </div>

        <div class="form-group">
            <label for="PuntoMinimo"> PuntoMinimo: </label>
            <input type="text" class="form-control" name="PuntoMinimo" id="PuntoMinimo" value="@Model.PuntoMinimo" />
        </div>

        <div class="form-group">
            <label for="Clasificacion"> Clasificacion: </label>
            <input type="text" class="form-control" name="Clasificacion" id="Clasificacion" value="@Model.Clasificacion" />
        </div>

        <div class="form-group">
            <label for="FechaVencimiento"> FechaVencimiento: </label>
            <input type="text" class="form-control" name="FechaVencimiento" id="FechaVencimiento" value="@Model.FechaVencimiento" />
        </div>


        <div class="form-group">
            <p> <button class="btn btn-primary btn-lg" type="submit" role="button"> Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/Productos/Index" role="button">Cancelar </a>
        </div>

    </form>

</div>


