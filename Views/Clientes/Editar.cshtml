
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>

    <form action="/Clientes/Modificar" method="post">

        <div class="form-group">
            <label for="cedula"> Cedula: </label>
            <label for="id" name="Cedula">@Model.Cedula </label>
            <input type="hidden" name="Cedula" value="@Model.Cedula" />
        </div>

        <div class="form-group">
            <label for="idtipocliente"> IdTipocliente: </label>
            <input type="text" class="form-control" name="IdTipocliente" id="IdTipocliente" value="@Model.IdTipocliente" />
        </div>

        <div class="form-group">
            <label for="primernombre"> PrimerNombre: </label>
            <input type="text" class="form-control" name="PrimerNombre" id="PrimerNombre" value="@Model.PrimerNombre" />
        </div>

        <div class="form-group">
            <label for="segundonombre"> SegundoNombre: </label>
            <input type="text" class="form-control" name="SegundoNombre" id="SegundoNombre" value="@Model.SegundoNombre" />
        </div>

        <div class="form-group">
            <label for="primerapellido"> PrimerApellido: </label>
            <input type="text" class="form-control" name="PrimerApellido" id="PrimerApellido" value="@Model.PrimerApellido" />
        </div>

        <div class="form-group">
            <label for="segundoapellido"> SegundoApellido: </label>
            <input type="text" class="form-control" name="SegundoApellido" id="SegundoApellido" value="@Model.SegundoApellido" />
        </div>

        <div class="form-group">
            <label for="telefono"> Telefono: </label>
            <input type="text" class="form-control" name="Telefono" id="Telefono" value="@Model.Telefono" />
        </div>

        <div class="form-group">
            <label for="CorreoElectronico"> CorreoElectronico: </label>
            <input type="text" class="form-control" name="CorreoElectronico" id="CorreoElectronico" value="@Model.CorreoElectronico" />
        </div>


        <div class="form-group">
            <p> <button class="btn btn-primary btn-lg" type="submit" role="button"> Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/Clientes/Index" role="button">Cancelar :C</a>
        </div>

    </form>

</div>


